{% extends "layout.html.twig" %}

{% block title 'index' %}
{% block content %}
    Welcome to your new Silex Application!

    <a class="btn btn-info" href="/user">User Bereich</a>
    <a class="btn btn-warning" href="/admin">Admin Bereich</a>

    {% for alert in app.session.flashbag.get('not activated') %}
        <div class="error-message">
            <div class="alert"><strong>{{ alert }}</strong></div>
        </div>
    {% endfor %}

    <h2>Mail Links</h2>
    <table class="table table-striped">
        <tr>
            <th>link</th>
            <th>uid</th>
            <th>expires</th>
        </tr>
        {% for mailcode in mailcodes %}
            <tr>
                <td><a href="/activate/mail/{{ mailcode.uid }}/{{ mailcode.link }}">{{ mailcode.link }}</a></td>
                <td>{{ mailcode.uid }}</td>
                <td>{{ mailcode.expires }}</td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}
